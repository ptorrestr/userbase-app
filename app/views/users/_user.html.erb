<li>
  <%= gravatar_for user, size: 52 %>
  <%= link_to user.name, user %>
  <% if current_user.admin? && !current_user?(user) %>
    | <%= link_to I18n.t('views.users.delete_link_user'), user, method: :delete,
          data: { confirm: I18n.t('views.users.confirm_delete_user') } %>
  <% end %>
</li>
